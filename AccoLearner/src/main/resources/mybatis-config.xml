<?xml version="1.0" encoding="UTF-8"?>
<!-- MyBatis 전역 설정 (typeAlias, 캐시, 플러그인 등), Mapper XML 위치 지정 -->

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- 1. settings 먼저 -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/> <!-- DB 컬럼명이 user_name일 때, 자바 필드가 userName으로 자동 매핑됨. (스네이크 → 카멜 변환 자동 적용)-->
        <setting name="cacheEnabled" value="true"/> <!-- MyBatis 2차 캐시(Mapper 단위 캐시)를 활성화함. 같은 쿼리 결과를 재사용할 수 있음. -->
        <setting name="jdbcTypeForNull" value="NULL"/> <!-- 파라미터가 null일 때 JDBC에서 NULL로 처리하도록 지정. DB와의 호환성 확보용. -->
    </settings>

    <!-- 2. typeAliases 다음 -->
    <typeAliases>
        <package name="kr.co.AccoLearner"/>
    </typeAliases>

    <!-- 필요시 다른 요소들 추가 가능 (plugins, environments 등) -->

</configuration>